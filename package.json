{
  "name": "mcp-s-oauth",
  "version": "1.0.0",
  "description": "Express middleware library for MCP (Model Context Protocol) OAuth authentication",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist/",
    "examples/",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "example": "tsx src/server.ts",
    "test": "tsx --test --test-concurrency=1 test/*.test.ts",
    "test:local": "./scripts/test-local.sh",
    "test:client": "tsx test-client.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mcp-s-ai/mcp-oauth.git"
  },
  "keywords": [
    "mcp",
    "oauth",
    "authentication",
    "express",
    "middleware",
    "model-context-protocol",
    "github-oauth",
    "google-oauth",
    "auth",
    "library"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mcp-s-ai/mcp-oauth/issues"
  },
  "homepage": "https://www.mcp-s.com/",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "dotenv": "^16.5.0",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@eslint/markdown": "^6.5.0",
    "@types/express": "^5.0.3",
    "@types/node": "^22.15.30",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.28.0",
    "globals": "^16.2.0",
    "json-schema": "^0.4.0",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1"
  }
}
